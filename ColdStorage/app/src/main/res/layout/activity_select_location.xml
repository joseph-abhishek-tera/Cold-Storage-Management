<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SelectLocationActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        app:title="Select Location"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/toolbar"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_below="@+id/toolbar"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:text="Guntur"
            android:textSize="17sp"
            android:fontFamily="@font/medium"
            android:textColor="@color/text_primary_color"
            android:id="@+id/itemGuntur"
            android:background="?selectableItemBackground"

            />

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#c6c6c6"
            android:layout_marginTop="6dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:text="Nandigama"
            android:textSize="17sp"
            android:fontFamily="@font/medium"
            android:textColor="@color/text_primary_color"
            android:id="@+id/itemNandigama"
            android:background="?selectableItemBackground"

            />

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#c6c6c6"
            android:layout_marginTop="6dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:text="Vijayawada"
            android:textSize="17sp"
            android:fontFamily="@font/medium"
            android:textColor="@color/text_primary_color"
            android:id="@+id/itemVijayawada"
            android:background="?selectableItemBackground"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#c6c6c6"
            android:layout_marginTop="6dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:text="Vizag"
            android:textSize="17sp"
            android:fontFamily="@font/medium"
            android:textColor="@color/text_primary_color"
            android:id="@+id/itemVizag"
            android:background="?selectableItemBackground"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#c6c6c6"
            android:layout_marginTop="6dp"
            />

    </LinearLayout>

</RelativeLayout>